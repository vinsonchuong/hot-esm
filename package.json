{
  "name": "hot-esm",
  "version": "1.1.0",
  "description": "ESM hot-reloading for Node.js",
  "keywords": [
    "hot",
    "hot-reloading",
    "hmr"
  ],
  "homepage": "https://github.com/vinsonchuong/hot-esm",
  "bugs": "https://github.com/vinsonchuong/hot-esm/issues",
  "license": "MIT",
  "author": "Vinson Chuong <vinsonchuong@gmail.com>",
  "type": "module",
  "main": "./index.js",
  "bin": {
    "hot": "./hot"
  },
  "repository": "vinsonchuong/hot-esm",
  "scripts": {
    "test": "xo && ava",
    "release": "semantic-release"
  },
  "dependencies": {
    "@stroncium/procfs": "^1.2.1",
    "chokidar": "^4.0.0",
    "debug": "^4.3.3",
    "is-path-inside": "^4.0.0",
    "is-wsl": "^3.0.0",
    "sort-on": "^6.0.0"
  },
  "devDependencies": {
    "ava": "^6.0.0",
    "ava-patterns": "^3.1.0",
    "quick-install": "^2.0.3",
    "semantic-release": "^24.0.0",
    "xo": "^0.59.0"
  },
  "resolutions": {
    "xo/eslint-import-resolver-webpack": ">=0.13.2"
  },
  "xo": {
    "prettier": true,
    "space": 2,
    "semicolon": false,
    "rules": {
      "import/extensions": "off",
      "unicorn/prefer-node-protocol": "off"
    }
  },
  "ava": {
    "verbose": true,
    "timeout": "5m"
  }
}
